/* Большие экраны */
@media all
  header
    display flex
    flex-direction column
    justify-content space-around
    align-items center

    position fixed

    width 90px
    height 100%
    min-height 300px

    background-color white

    box-shadow 0 0 10px rgba(0,0,0,0.5)

    z-index 20

  .header-logo
    min-width 45px
    min-height 49px

    background url("../img/content/logo-black-blu.png")
    background-size contain

    transition: transform .3s linear;
    order 1

  .header-logo:hover
    transform translate(7px,-7px)

  .header-logo:not(:hover)
    transform translate(0,0)


  .header-sandwich
    display flex
    justify-content center
    align-items center
    order 2

    margin 10px

    min-width 40px
    min-height 40px

  .header-sandwich__lines
    position absolute

    width 24px
    height 3px

    background-color #212121

    border-radius 5px 5px

  .header-sandwich__lines:before
    content ''

    position absolute
    top -8px

    width 24px
    height 3px

    background-color #212121

    border-radius 5px 5px

  .header-sandwich__lines:after
    content ''

    position absolute
    top 8px

    width 20px
    height 3px

    background-color #212121

    border-radius 5px 5px


  .header-sandwich:hover .header-sandwich__lines:before
    transition: transform .2s linear;
    transform translate(0,2px)
    background-color #00A8E8

  .header-sandwich:hover .header-sandwich__lines
    transition: transform .2s linear;
    background-color #00A8E8

  .header-sandwich:hover .header-sandwich__lines:after
    transition: all .2s linear;
    transform translate(0,-2px)
    width 24px
    background-color #00A8E8


  .header-social
    display flex
    flex-direction column
    align-items center
    justify-content space-between
    width 90px
    min-height 158px
    order 3

  .header-social__icon
    width 20px
    height 20px
    transition: all .2s linear;

  .header-social__icon:hover
    fill #00A8E8
    width 25px



  .menu-layer
    position fixed

    width 100%
    height 100%

  .menu-layer_active
    background-color rgba(0,0,0,0.9)
    opacity 1

    z-index 5

  .menu
    position fixed
    left -390px

    width 400px
    height 100%

    z-index 10


  .menu-active
    position fixed
    width 400px
    height 100%

    background-color #F5F5F5

    z-index 10
    transition: all .1s linear;
    transform translate(480px,0)





