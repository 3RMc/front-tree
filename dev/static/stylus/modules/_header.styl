/* Большие экраны */
@media all
  header
    display grid

    grid-template-columns 100%
    grid-template-rows 100px 500px
    justify-items center

    width 100%
    max-width 1900px

    background url("../img/svg/banner-without-header.svg")
    background-size 100% 100%
    background-repeat no-repeat


  .header-nav
    display inline-grid

    grid-template-columns 40% 20% 20% 20%
    grid-template-rows 100px


    min-width 480px
    min-height 100px
    width 100%
    max-width 2900px

    background-color black

    font-family: 'Marck Script', cursive;
    font-size 2.5em

    color white


  .header-nav__item a
    margin-left 3%
    color white

  .header-nav__item:nth-of-type(1n+2)
    font-size 0.6em

  .header-nav__item
    display flex
    justify-content center
    align-items center

  .header-nav__icon-logo
    width 2em
    height 2em

  .header-nav__icon
    width 1em
    height 1em

  .header-nav__title
    justify-content start


